
@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex" style="justify-content:flex-end">
        <a asp-controller="category" asp-action="create" class="btn btn-primary btn-icon-text mt-3">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>

    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Category
                </th>
                <th>
                    Flower Count
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
            <tr>
                <td>
                    @category.Id
                </td>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.FlowerCategories.Count
                </td>
                <td>
                    <a asp-controller="category" asp-action="edit" asp-route-id="@category.Id" class="btn btn-primary btn-icon-text mt-3">
                        <i class="mdi mdi-file-check btn-icon-append"></i>
                        Edit
                    </a>
                    <a asp-controller="category" asp-action="delete" asp-route-id="@category.Id" class="btn btn-primary btn-icon-text mt-3 delete-item">
                        <i class="mdi mdi-alert btn-icon-prepend"></i>
                        Delete
                    </a>
                    
                </td>
            </tr>
            }

        </tbody>
    </table>
    <div class="row justify-content-center mt-3">
        <nav aria-label="...">
            <ul class="pagination" style="justify-content:center">
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>

</div>

@section Scripts{
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(".delete-item").click(function (e) {
        e.preventDefault();

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                var link = $(this).attr("href");
                fetch(link).then(response => response.json()).then(data => {
                    if (data.status == 200) {
                        location.reload(true)
                    }
                    else {
                        Swal.fire(
                            'Category not found!',
                            'Your file can not be deleted.',
                            'Failed'
                        )
                    }
                }
                  
                );
              
            }
        })
    })
</script>
 }