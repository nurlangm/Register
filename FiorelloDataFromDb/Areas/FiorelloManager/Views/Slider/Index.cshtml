@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex" style="justify-content:flex-end">
        <a asp-controller="slider" asp-action="create" class="btn btn-primary btn-icon-text mt-3">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>

    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Slider Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    Subtitle
                </th>
                <th>
                    Signature
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Slider slider in Model)
            {
            <tr>
                <td>
                    @slider.Id
                </td>
                <td>
                    <img style="width:200px;height:60px;object-fit:contain;border-radius:0px" src="~/assets/images/@slider.Image" alt="slider image" />
                </td>
                <td>
                    @slider.Title
                </td>
                @if (slider.Desc.Length > 25)
                {
                    <td>
                        @slider.Desc.Substring(0, 25)...
                    </td>
                }
                else
                {
                     <td>
                          @slider.Desc
                    </td>
                    
                }
                <td>
                    <img style="width:100px;height:60px;object-fit:contain;border-radius:0px" src="~/assets/images/@slider.Signature" alt="slider image" />
                </td>
                <td>
                    <a asp-controller="slider" asp-action="edit" asp-route-id="@slider.Id" class="btn btn-primary btn-icon-text mt-3">
                        <i class="mdi mdi-file-check btn-icon-append"></i>
                        Edit
                    </a>
                    <a asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id" class="btn btn-primary btn-icon-text mt-3 delete-item">
                        <i class="mdi mdi-alert btn-icon-prepend"></i>
                        Delete
                    </a>

                </td>
            </tr>
            }

        </tbody>
    </table>
